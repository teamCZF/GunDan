<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/personal_bg">


    <LinearLayout
        android:id="@+id/image_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/my_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@mipmap/head"
            android:layout_marginLeft="33dp"
             />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:paddingTop="5dp"
                android:id="@+id/my_name"
                android:gravity="center"
                android:text="小虹虹"
                android:textSize="33sp"
                android:textColor="@drawable/white"
                />
            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个性签名："
                    android:textColor="@drawable/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="full me like this"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:layout_below="@+id/image_head"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View style="@style/bg_line"/>
    <LinearLayout style="@style/top_layout">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/personal_edit"/>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_myInfo"
            android:background="#ffffff"
            android:text="个人信息"
            android:textSize="@dimen/title_text_size"
             />
    </LinearLayout>
    <View style="@style/bg_line"/>
    <LinearLayout
       style="@style/mid_layout">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/personal_achieve"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_myHonor"
            android:background="#ffffff"
            android:text="我的成就"
            android:textSize="@dimen/title_text_size"
            />
    </LinearLayout>
    <View style="@style/bg_line"/>
    <LinearLayout
        style="@style/bottom_layout">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/personal_edit"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:id="@+id/button_historyStep"
            android:text="历史步数"
            android:textSize="@dimen/title_text_size"/>
    </LinearLayout>
    <LinearLayout
        style="@style/bottom_layout">
        <Button
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="@color/rankGray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="退出"
            android:textSize="20dp"
            android:id="@+id/logout"/>
    </LinearLayout>
</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#00000000">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/user_back"
            android:background="@mipmap/main_home"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>
