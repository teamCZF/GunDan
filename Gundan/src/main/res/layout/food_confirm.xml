<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="180dp"
    android:orientation="vertical"
    android:background="@drawable/lowGreen"
    >
    <Button
        android:id="@+id/cancel_buy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="                        x"
        android:textSize="28dp"
        android:textColor="@color/rankGray"
        android:background="@drawable/lowGreen"
        />
    <ImageView
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:id="@+id/confirm_foodimage"
        android:layout_gravity="center"
        android:background="@drawable/food1"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="确认购买此物品？"
        android:textColor="@color/rankGray"
        android:textSize="20dp"
        android:background="@drawable/lowGreen"
        android:gravity="center_horizontal"
        />
    <Button
        android:id="@+id/confirm_buy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/appStyleBlue"
        android:text="确定"
        android:textSize="20dp"
        android:textColor="@drawable/lowGreen"
        />

</LinearLayout>
