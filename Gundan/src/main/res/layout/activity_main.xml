<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_bg"
    tools:context="com.ui.MainActivity">

    <LinearLayout
        android:id="@+id/step_part"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentRight="true">
        <TextView
            android:id="@+id/text_step"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="35sp"
            android:text="0"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:gravity="center"
            android:text="步"
            android:id="@+id/textView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/step_part"
        android:layout_alignEnd="@+id/step_part"
        android:layout_alignRight="@+id/pet_state">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/gold"/>
        <TextView
            android:id="@+id/pet_money"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="6666"
            android:gravity="center"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/pet_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="vertical">
        <LinearLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_alignParentLeft="true">
            <TextView
                android:id="@+id/pet_name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="滚滚"
                android:gravity="left"
                android:textSize="24sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LV "
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/pet_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="22sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/hp_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="健康值："
                android:textSize="18sp"/>
            <ProgressBar
                android:id="@+id/hp_progressbar"
                android:layout_width="120dp"
                android:layout_height="22dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="100"
                android:progress="50"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mp_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hp_progress">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="心情值："
                android:textSize="18sp"/>
            <ProgressBar
                android:id="@+id/mp_progressbar"
                android:layout_width="120dp"
                android:layout_height="22dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="100"
                android:progress="100"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/exp_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mp_progress">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  EXP   ："
                android:textSize="18sp"/>
            <ProgressBar
                android:id="@+id/exp_progressbar"
                android:layout_width="120dp"
                android:layout_height="22dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="100"
                android:progress="100"/>
        </LinearLayout>
    </LinearLayout>



    <ImageView
        android:layout_width="250dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/nest"
        android:scaleType="fitEnd"
        android:id="@+id/pet_nest" />
    <ImageView
        android:id="@+id/egg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingTop="110sp"
        android:src="@mipmap/egg0"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/main_plus"
            android:layout_marginLeft="10dp"
            android:id="@+id/menu_button"/>
        <Button
            android:id="@+id/button_store"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="45dp"
            android:background="@mipmap/main_shopping"/>
        <Button
            android:id="@+id/button_rank"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/main_ranking"/>
        <Button
            android:id="@+id/button_user"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/main_personal"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/personal_tujian"/>

    </LinearLayout>

</RelativeLayout>
