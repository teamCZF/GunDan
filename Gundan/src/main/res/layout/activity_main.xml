<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/mainbg1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    tools:context="com.ui.MainActivity">

    <LinearLayout
        android:id="@+id/step_part"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentRight="true">
        <TextView
            android:id="@+id/text_step"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="35sp"
            android:text="0"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:gravity="center"
            android:text="步"
            android:id="@+id/textView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/step_part"
        android:layout_alignParentRight="true">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/gold"/>
        <TextView
            android:id="@+id/pet_money"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="6666"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pet_basic"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:gravity="bottom">
        <TextView
            android:id="@+id/pet_name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="滚滚"
            android:gravity="left"
            android:textSize="24sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LV "
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/pet_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="22sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/hp_progress"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/pet_basic">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="健康值："
            android:textSize="18sp"/>
        <ProgressBar
            android:id="@+id/hp_progressbar"
            android:layout_width="120dp"
            android:layout_height="22dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="50"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/mp_progress"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/hp_progress">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="心情值："
            android:textSize="18sp"/>
        <ProgressBar
            android:id="@+id/mp_progressbar"
            android:layout_width="120dp"
            android:layout_height="22dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="100"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/exp_progress"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/mp_progress">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  EXP   ："
            android:textSize="18sp"/>
        <ProgressBar
            android:id="@+id/exp_progressbar"
            android:layout_width="120dp"
            android:layout_height="22dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="100"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/fork_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/fork"/>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="290dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/nest1"
        android:scaleType="fitEnd"
        android:id="@+id/pet_nest" />
    <ImageView
        android:id="@+id/egg"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/egg1"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
